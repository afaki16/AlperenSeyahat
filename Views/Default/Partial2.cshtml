@using TravelTripProje.Models.Classes
@model List<Blog> 


<div class="right">
    @foreach (var c in Model)
    {
        <div class="bot-left">
            <img src="@c.BlogImage" style="width:300px"; height="150px;" alt="" />
        </div>
        <div class="left-text">

            <h4>@c.Baslik</h4>
            <span class="doller">@c.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@c.Aciklama.Substring(0,100)</p>
            <p><a href="~/Blog/BlogDetay/@c.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>

    }

</div>
